{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["es2017"],
    "skipLibCheck": true,
    "baseUrl": "./",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "checkJs": true,
    "module": "commonjs",
    "noEmit": true,
    "alwaysStrict": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["node_modules", "**/node_modules/*"],
  "typeAcquisition": {
    "enable": true
  }
}
